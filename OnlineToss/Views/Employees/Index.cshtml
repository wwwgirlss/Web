                {
                    <span @*class="glyphicon glyphicon-remove text-danger"*@ title="女" data-toggle="tooltip" data-placement="right">女</span>
                }
                else
                {
                    <span @*class="glyphicon glyphicon-ok text-success"*@ title="男" data-toggle="tooltip" data-placement="left">男</span>
                }
            </td>
