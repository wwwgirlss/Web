                        <li class="nav-item" type="button">@Html.ActionLink("送貨管理", "Index", "ShippingMethods", new { area = "" }, new { @class = "nav-link text-light" })</li>
                        <li class="nav-item" type="button">@Html.ActionLink("付款管理", "Index", "PaymentTypes", new { area = "" }, new { @class = "nav-link text-light" })</li>
                        @*<button class="btn btn-outline-light" type="button">@Html.ActionLink("類別管理", "Index", "Categories")</button>*@
                        <li class="nav-item" type="button">@Html.ActionLink("詩籤管理", "Index", "Tosses", new { area = "" }, new { @class = "nav-link text-light" })</li>

                    </ul>

                    <div class="navbar-collapse ml-3 logout " style="border-radius: 10px ; ">
                        <p>@Html.ActionLink("登出", "Logout", "HomeManager", null, new { @class = "nav-link btn btn-light text-danger textbold" })</p>
                    </div>

                </div>

