                        }

                    </ul>*@


            </div>
            
        </nav>
    }
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <div style="background-color:#ffffff">

                    <p class=" text-center ">&copy; @DateTime.Now.Year - Online Toss 線上求籤 By 李核渝</p>
                </div>

            </footer>
