<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Online Toss</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    @RenderSection("css", false)
    <style>
        body {
            /*display: flex;*/
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(#FAEBD7, #FFFAFA, #D2B48C);
            font-family: Comic Sans MS,LiHei Pro;
        }

        .table-hover tbody tr:hover {
            background-color: #f2db9b;
        }

        .logout {
            width: 50px;
            height: 50px;
            /*border-radius: 50%;*/
            font-size: 2rem;
            position: relative;
        }
    </style>


    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>
<body>
    @if (Session["Memp"] != null)//判斷是否有登入session
    {
        <nav class="navbar navbar-inverse navbar-fixed-top  navbar-expand-md navbar-dark" style="background-color: #182a5b; ">

            <div class="container text-right">
                @*----LOGO----*@
                <div class="navbar-header">
                    <div type="button" class="navbar-toggle navbar-dark" data-toggle="collapse" data-target=".navbar-collapse">
                        <div id="logo"><a href="~/MyOnlineToss.html" target="筊杯首頁" title="前往筊杯首頁" data-toggle="tooltip" data-placement="left" class="glyphicon glyphicon-ok text-success"><img src="~/photo/logo2_110.png" width="110" height="110" style=" border-radius:50%" /></a></div>
                    </div>
                </div>


                <div class="navbar-collapse collapse navbar-dark " id="mainMenu">

                    <div class="icon-bar" target="管理首頁" title="管理首頁" data-toggle="tooltip" data-placement="bottom">
                    @Html.ActionLink("ONLINE TOSS", "Index", "HomeManager", new { area = "" }, new { @class = "navbar-brand  ml-5" })
                    </div>

                    @*----選單----*@
                    <ul class="navbar-nav mt-auto Tbtn" data-bs-theme="dark">
                        <li class="nav-item">@Html.ActionLink("會員管理", "Index", "Members", new { area = "" }, new { @class = "nav-link text-light" })</li>
                        <li class="nav-item" type="button">@Html.ActionLink("員工管理", "Index", "Employees", new { area = "" }, new { @class = "nav-link text-light" })</li>
                        <li class="nav-item" type="button">@Html.ActionLink("商品管理", "Index", "Products", new { area = "" }, new { @class = "nav-link text-light" })</li>
                        <li class="nav-item" type="button">@Html.ActionLink("訂單管理", "Index", "Orders", new { area = "" }, new { @class = "nav-link text-light" })</li>
                        <li class="nav-item" type="button">@Html.ActionLink("送貨管理", "Index", "ShippingMethods", new { area = "" }, new { @class = "nav-link text-light" })</li>
                        <li class="nav-item" type="button">@Html.ActionLink("付款管理", "Index", "PaymentTypes", new { area = "" }, new { @class = "nav-link text-light" })</li>
                        <li class="nav-item" type="button">@Html.ActionLink("類別管理", "Index", "Categories", new { area = "" }, new { @class = "nav-link text-light" })</li>
                        <li class="nav-item" type="button">@Html.ActionLink("詩籤管理", "Index", "Tosses", new { area = "" }, new { @class = "nav-link text-light" })</li>

                    </ul>

                    <div class=" ml-5 text-right logout" data-toggle="tooltip" data-placement="top" title="登出">
                        <ul class="text-right">@Html.ActionLink(" ", "Logout", "HomeManager", null, new { @class = "text-light textbold bi bi-arrow-right-square-fill" })</ul>
                    </div>





                </div>
            </div>
        </nav>
    }
    <div class="container body-content ">
        @RenderBody()
        <hr class="my-5" />
        <footer>
            <div>

                <p class=" text-center ">&copy; @DateTime.Now.Year - Online Toss 線上求籤 By 李核渝</p>
            </div>

        </footer>
    </div>



    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", false)

    

</body>
</html>
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>