                    ("登出"--按鈕名稱, "Logout"--Action名稱, "Login"--controller)
                }

            </ul>*@

            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div style="background-color: #b7dbf2;">

                <p class=" text-center ">&copy; @DateTime.Now.Year - Online Toss 線上求籤 By 李核渝</p>
            </div>

        </footer>
    </div>
    


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>