                </button>
                <span class="icon-bar"></span>
                @Html.ActionLink("ONLINE TOSS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navbar-dark">
                <form class="form-inline">
                    <button class="btn btn-outline-light" type="button">@Html.ActionLink("會員管理", "Index", "Members")</button>
                    <button class="btn btn-outline-light" type="button">@Html.ActionLink("員工管理", "Index", "Employees")</button>
                    <button class="btn btn-outline-light" type="button">@Html.ActionLink("產品管理", "Index", "Products")</button>
                    <button class="btn btn-outline-light" type="button">@Html.ActionLink("訂單管理", "Index", "Orders")</button>
                    <button class="btn btn-outline-light" type="button">@Html.ActionLink("送貨管理", "Index", "ShippingMethods")</button>
                    <button class="btn btn-outline-light" type="button">@Html.ActionLink("付款管理", "Index", "PaymentType")</button>
                    <button class="btn btn-outline-light" type="button">@Html.ActionLink("類別管理", "Index", "Categories")</button>
                    <button class="btn btn-outline-light" type="button">@Html.ActionLink("詩籤管理", "Index", "Toss")</button>
                    <button class=" ml-5 " style="border-radius: 10px ; ">@Html.ActionLink("登出", "Logout", "Login", null, new { @class = "nav-link btn btn-light text-danger textbold" })</button>
                </form>


