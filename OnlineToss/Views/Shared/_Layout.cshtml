<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Online Toss</title>
    
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ONLINE TOSS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    @*@if (Session["emp"] != null)
                    {*@
                        <li>@Html.ActionLink("會員資料管理", "Index", "Members")</li>
                        <li>@Html.ActionLink("員工資料管理", "Index", "Employees")</li>
                        <li>@Html.ActionLink("產品資料管理", "Index", "Products")</li>
                        <li>@Html.ActionLink("訂單資料管理", "Index", "Orders")</li>
                        <li>@Html.ActionLink("產品類別管理", "Index", "Categories")</li>
                        <li>@Html.ActionLink("送貨方式管理", "Index", "ShippingMethods")</li>
                        @*<li>@Html.ActionLink("登出", "Logout", "Login", null, new { @class = "btn btn-default" })</li>*@
                        @*("登出"--按鈕名稱, "Logout"--Action名稱, "Login"--controller)*@
                    @*}*@
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="bg-info">&copy; @DateTime.Now.Year - Online Toss 線上求籤</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>