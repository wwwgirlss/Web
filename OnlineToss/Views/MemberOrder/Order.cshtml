<div>
    @Html.ActionLink("回到購物車", "MyCart", "Home")
</div>
@section scripts{
    <script>
        if (localStorage.getItem("cart")) {
            $('#cartData').val(localStorage.getItem("cart"));
        }
    </script>
}
