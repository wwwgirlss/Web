            @Html.LabelFor(model => model.MemID, "訂購人", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("MemberID", null, htmlAttributes: new { @class = "form-control" })*@
                <span>@memName </span>
                @Html.ValidationMessageFor(model => model.MemID, "", new { @class = "text-danger" })
            </div>
