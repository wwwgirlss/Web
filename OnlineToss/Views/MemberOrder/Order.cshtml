@model OnlineToss.Models.Orders

@using OnlineToss.Models
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var memName = ((Members)Session["member"]).MemName;
    var empID = ((Employees)ViewBag.Employee).EmpID;
    var empName = ((Employees)ViewBag.Employee).EmpName;
}

<h2>Order</h2>

