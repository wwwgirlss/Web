                @*@Html.EditorFor(model => model.EmpID, new { htmlAttributes = new { @class = "form-control" } })*@
                <input id="EmpID" type="hidden" name="EmpID" value="@empID" />
                <span class = "text-white">@empName</span>
                @Html.ValidationMessageFor(model => model.EmpID, "", new { @class = "text-white" })
            
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="確定購買" class="btn btn-light" />
            </div>
