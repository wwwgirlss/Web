@model IEnumerable<OnlineToss.Models.Members>

@{
    ViewBag.Title = "TOSS會員管理";
}

<h3 class="mt-3">TOSS會員管理</h3>

<p class="text-right text-white">
    <button class="btn btn-warning" id="showAddForm"><span class="bi bi-clipboard2-plus"></span>@Html.ActionLink("新增會員資料", "Create")</button>
</p>
<table class="table table-striped table-hover text-center ">
    <tr class="bg-primary text-white">
        <th>
            @Html.DisplayNameFor(model => model.MemID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.BornTimes.BornTimeName)
        </th>*@
        <th>
            資料管理
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MemID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemName)
        </td>
        <td class="text-center">
            @*@Html.DisplayFor(modelItem => item.Gender)*@
            @if (@item.Gender)
            {
                <span class="text-danger" title="女" data-toggle="tooltip" data-placement="right"><i class="bi bi-gender-female"></i></span>
            }
            else
            {
                <span class="text-primary" title="男" data-toggle="tooltip" data-placement="left"><i class="bi bi-gender-male"></i></span>
            }
        </td>

        @*<td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Birthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Account)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BornTimes.BornTimeName)
        </td>*@
    <td>
        @Html.ActionLink("修改資料", "Edit", new { id = item.MemID }, new { @class = "btn btn-sm btn-info" })      
        @Html.ActionLink("查看詳細", "Details", new { id = item.MemID }, new { @class = "btn btn-sm btn-warning" }) 
        @*@Html.ActionLink("Delete", "Delete", new { id=item.MemID })*@
    </td>
    </tr>
}

</table>
