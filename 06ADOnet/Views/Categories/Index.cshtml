@model IEnumerable<_06ADOnet.Models.Categories>

@{
    ViewBag.Title = "產品類別管理";
}

<h2>產品類別列表</h2>

<p>
    @Html.ActionLink("新增產品類別", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Picture)
        </td>*@
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("詳細資料", "Details", new { id=item.CategoryID }) |
            @Html.ActionLink("刪除", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>
