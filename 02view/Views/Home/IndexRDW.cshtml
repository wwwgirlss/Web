@model IEnumerable<_02view.Models.NightMarket>

@{
    ViewBag.Title = "IndexRDW";
}

<h2 class="alert alert-success text-center">各大夜市列表</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="thumbnail">
                <img src="~/images/@(item.Id).jpg" class="img-thumbnail" />
                <div class="caption">
                    <h2>@item.Name</h2>
                    <p>@item.Address</p>
                    <p>
                        <a href="https://www.google.com.tw/maps/search/@item.Address" target="_blank" class="btn btn-primary btn-block">查看地圖!</a>
                    </p>
                </div>
            </div>


        </div>
    }
</div>