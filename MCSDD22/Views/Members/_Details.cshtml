@model MCSDD22.Models.Members

@{
    ViewBag.Title = "Details";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>會員詳細資料</h2>

<div class="card border-success shadow" style="background-color:#e2f2eb">

    <div class="card-body row">
        <div class="col-7">
            <h2 class="mt-3 text-primary">
                <i class="bi bi-person-vcard-fill"></i>
                <strong>
                    @Html.DisplayFor(model => model.MemberName)
                </strong> (@Html.DisplayFor(model => model.MemberID))
            </h2>



            <h3 class="mt-3 text-primary">
                <i class="bi bi-calendar-heart"></i>
                @Html.DisplayFor(model => model.MemberBirthday)
            </h3>

            <hr/>


            <h3 class="mt-3 text-danger">
                <i class="bi bi-line"></i>
                @Html.DisplayFor(model => model.Account)
            </h3>



            <h3 class="mt-3 text-danger">
                <i class="bi bi-bag-heart-fill"></i>
                @*@Html.DisplayFor(model => model.Password)*@
                **************************
            </h3>
        </div>


        <div class="col-4">
            <div class="text-center">
                @if (Model.MemberPhotoFile == null)
                {
                    <i class="bi bi-emoji-smile " style="font-size:10rem"></i>
                }
                else
                {
                    <img src="@Model.MemberPhotoFile" class="img-thumbnail text-center" />

                }
            </div>
        </div>


    </div>

    <div class="card-footer">
        <h5 class="text-right">於 @Html.DisplayFor(model => model.CreatedDate) 加入本站會員</h5>
    </div>

</div>

